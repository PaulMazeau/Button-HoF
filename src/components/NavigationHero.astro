<div class="nav-bar">
    <a id="prev-hero" class="links" href="#">Previous hero</a>
    <a class="links" href="/">Back Home</a>
    <a class="links" href="#">Source Code</a>
    <a id="next-hero" class="links" href="#">Next hero</a>
</div>

<script>
   document.addEventListener('DOMContentLoaded', () => {
    const totalHeroes = 5; 
    let currentHero = parseInt(new URLSearchParams(window.location.search).get('hero') || '1', 10);
    
    const updateLinks = () => {
        // Convertis currentHero en string pour l'URL et utilise TypeScript cast pour HTMLElement vers HTMLAnchorElement
        (document.getElementById('prev-hero') as HTMLAnchorElement).href = `?hero=${currentHero - 1}`;
        (document.getElementById('next-hero') as HTMLAnchorElement).href = `?hero=${currentHero + 1}`;

        if (currentHero <= 1) {
            (document.getElementById('prev-hero') as HTMLAnchorElement).style.textDecoration = 'line-through';
        } else if (currentHero >= totalHeroes) {
            (document.getElementById('next-hero') as HTMLAnchorElement).style.textDecoration = 'line-through';
        }
    };

    document.getElementById('prev-hero')!.addEventListener('click', (e) => {
        if (currentHero > 1) {
            currentHero--;
            updateLinks();
        } else {
            e.preventDefault();
        }
    });

    document.getElementById('next-hero')!.addEventListener('click', (e) => {
        if (currentHero < totalHeroes) {
            currentHero++;
            updateLinks();
        } else {
            e.preventDefault();
        }
    });

    updateLinks();
});

</script>